<div class="fr-mb-4v">
{{signalement.civiliteOccupant(false)}}
{{ signalement.nomOccupant|capitalize }}
{{ signalement.prenomOccupant|capitalize }}
{% if signalement.mailOccupant %}
	<br>
	{{ signalement.mailOccupant }}
