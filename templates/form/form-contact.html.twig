{% if message is defined and message is not null %}
	<div class="fr-alert fr-alert--{{type}} fr-alert--sm fr-mb-2w">
    	<p>{{message}}</p>
	</div>
{% endif %}

{% form_theme form 'form/dsfr_theme.html.twig' %}
{{ form_start(form) }}
{{ form_errors(form) }}
<div class="fr-grid-row fr-grid-row--gutters">
	<div class="fr-col-12 fr-col-md-4">
		{{ form_row(form.nom) }}
	</div>
	<div class="fr-col-12 fr-col-md-4">
		{{ form_row(form.email) }}
	</div>
	<div class="fr-col-12 fr-col-md-4">
		{{ form_row(form.organisme) }}
	</div>
	<div class="fr-col-12">
		{{ form_row(form.objet) }}
	</div>
	<div class="fr-col-12">
		{{ form_row(form.message) }}
	</div>
	<div class="fr-col-12">
		{{ form_row(form.save) }}
	</div>
</div>
{{ form_end(form) }}
