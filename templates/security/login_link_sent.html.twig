{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <main class="fr-container fr-py-5w" id="content">
        <div class="fr-grid-row fr-grid-row--center">
            <div class="fr-col-12 fr-col-md-8 fr-col-lg-6 fr-background-alt--blue-france fr-p-4w fr-radius--lg">
                <h1 class="fr-text--center fr-mb-6v">{{title}}</h1>
                <p class="fr-mb-5v">
                    {% if not is_alert %}
                    <p class="fr-mb-5v">
                        {{ message }}
                    </p>
                    {% endif %}
                    <em class="fr-fi-information-line fr-text--light fr-text-label--blue-france">Vérifiez vos courriels à l'adresse {{ email }}</em>
                
                    {% if is_alert %}
                        <div class="fr-notice fr-notice--alert">
                            <div class="fr-container">
                                <div class="fr-notice__body">
                                    <p>
                                        <span class="fr-notice__title">{{ message }}</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </p>
            </div>
        </div>
    </main>
{% endblock %}
