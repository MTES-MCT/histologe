{% extends 'base.html.twig' %}

{% block title %}Accéder à mon dossier bailleur{% endblock %}

{% block body %}
    <main class="fr-container fr-py-5w" id="content">
        <section class="fr-grid-row fr-grid-row--center">
            <div class="fr-mt-5v fr-col-md-6">
                <h1>Accéder à mon dossier bailleur</h1>
                <p class="fr-mb-5v">Merci de renseigner les informations demandées pour accéder au dossier !</p>
                <p>
                    <em>Tous les champs sont obligatoires</em>
                </p>
                {% if error %}
                    <div role="alert" class="fr-alert fr-alert--error fr-alert--sm fr-col-12 fr-mb-5w">
                        <p class="fr-alert__title">Connexion impossible</p>
                        <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    </div>
                {% endif %}
                <form action="" class="" name="login-bailleur-form" method="POST">
                    <div class="fr-input-group">
                        <label class="fr-label" for="login-bailleur-reference">
                            Référence du dossier
                        </label>
                        <input class="fr-input" type="text" id="login-bailleur-reference" name="bailleur_reference" required>
                    </div>
                    <div class="fr-input-group">
                        <label class="fr-label" for="login-bailleur-code">
                            Code de connexion
                            <span class="fr-hint-text">Format attendu : xxxx-xxxx-xxxx-xxxx</span>
                        </label>
                        <input class="fr-input" type="text" id="login-bailleur-code" name="bailleur_code" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('activation') }}">
                    <div class="fr-form-group">
                        <button class="fr-btn fr-icon-checkbox-circle-fill fr-btn--icon-right">
                            Envoyer
                        </button>
                    </div>
                </form>
            </div>
        </section>
    </main>
{% endblock %}
