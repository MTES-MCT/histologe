{% extends 'emails/base_email.html.twig' %}

{% block body %}

    <p>Plateforme: {{ url }}</p>
    {% if code is defined %}
        <p>Code erreur: {{ code }}</p>
    {% endif %}
    {% if error is defined %}
        <p>Message erreur: {{ error }}</p>
    {% endif %}
    {% if message is defined %}
        <p>{{ message }}</p>
    {% endif %}
    {% if req is defined and message is not defined%}
        <p>{{ req|json_encode() }}</p>
    {% endif %}
{% endblock %}
