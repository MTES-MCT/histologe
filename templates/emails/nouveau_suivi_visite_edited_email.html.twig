{% extends 'emails/base_email.html.twig' %}

{% block body %}
    <p>Bonjour,</p>
    <p>
        La conclusion de la visite du logement situé
        <br>
        <strong>{{ signalement_adresseOccupant~', '~signalement_cpOccupant~' '~signalement_villeOccupant|upper }}</strong>
        <br>
        effectuée par {{ partner_name }} a été mise à jour.
    </p>

    {% if intervention_changes|length > 0 %}
        {% for field, value in intervention_changes %}
            <p><i>Modification(s) apportée(s) {{ field == 'details' ? 'sur le commentaire de visite' : 'sur la conclusion de visite'}} </i></p>
            <p><strong>Avant : </strong>{{ value.old is not null ? value.old|striptags : '—' }}</p>
            <p><strong>Après : </strong>{{ value.new is not null ? value.new|striptags : '—' }}</p>
            {% if not loop.last %}
                <hr style="border: 1px solid darkgrey">
            {% endif %}
        {% endfor %}
    {% endif %}
    <p>
        Cliquez sur le bouton ci-dessous pour y accéder.
    </p>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="btn btn-primary" style="text-align: center">
        <tbody>
        <tr>
            <td align="left">
                <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                    <tbody>
                    <tr style="text-align: center;width: 100%">
                        <td>
                            <a href="{{ lien_suivi|raw }}" target="_blank" rel="noopener">{{ btntext|capitalize }}</a></td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
    <p>Si le bouton ne fonctionne pas <a href="{{ lien_suivi|raw }}">cliquez ici</a></p>
{% endblock %}
