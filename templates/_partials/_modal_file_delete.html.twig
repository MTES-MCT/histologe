<dialog aria-labelledby="fr-file-delete-title" id="fr-modal-file-delete" class="fr-modal" role="dialog">
    <div class="fr-container fr-container--fluid fr-container-md fr-text--left">
        <div class="fr-grid-row fr-grid-row--center">
            <div class="fr-col-12 fr-col-md-8 fr-col-lg-6">            
                <form 
                    action="{{ path('back_signalement_delete_file',{uuid:signalement.uuid}) }}" 
                    name="file_delete"
                    id="form-delete-file" 
                    method="POST"
                    >
                    <div class="fr-modal__body">
                        <div class="fr-modal__header">
                            <h1 id="fr-modal-file-delete-title" class="fr-modal__title">
                                <span class="fr-fi-arrow-right-line" aria-hidden="true"></span>
                                Supprimer <span class="fr-modal-file-delete-type"></span>
                            </h1>   
                        <button class="fr-link--close fr-link" aria-controls="fr-modal-file-delete">Fermer</button>
                        </div>
                        <div class="fr-modal__content">    
                            <div class="fr-select-group">
                                Vous êtes sur le point de supprimer <span class="fr-modal-file-delete-type"></span> <b><span class="fr-modal-file-delete-filename"></span></b>. <br>
                                Une fois supprimé, <span class="fr-modal-file-delete-type"></span> ne sera plus visible dans le signalement. <br>
                                Si vous avez partagé <span class="fr-modal-file-delete-type"></span> à l'usager, il n'y aura plus accès.
                            </div>
                            <div class="fr-alert fr-alert--info">
                                <p>Voulez-vous vraiment supprimer <span class="fr-modal-file-delete-type"></span> ?</p>
                            </div>

                        </div>
                        <div class="fr-modal__footer">
                            <ul class="fr-btns-group fr-btns-group--right fr-btns-group--inline-lg fr-btns-group--icon-left">
                                <li>
                                    <button type="button" class="fr-btn fr-btn--secondary fr-icon-close-line"
                                            aria-controls="fr-modal-file-delete">
                                        Non, annuler
                                    </button>
                                </li>
                                <li>
                                    <button class="fr-btn fr-icon-checkbox-line" type="submit" form="file_delete_form"
                                            id="file_delete_form_submit">
                                        Oui, supprimer
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <input type="hidden" name="file_id" id="fr-modal-file-delete_fileid" aria-hidden="true">
                    <input type="hidden" name="_token" value="{{ csrf_token('signalement_delete_file_'~signalement.id) }}" aria-hidden="true">
                </form>
            </div>
        </div>
    </div>
</dialog>