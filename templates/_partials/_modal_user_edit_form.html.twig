{% if user.userPartners|length > 1 %}
    <div class="fr-alert fr-alert--info fr-alert--sm fr-mb-3v">
        <p>
            Cet agent intervient sur plusieurs territoires. 
            Vous ne pouvez pas modifier les informations d'un compte agent intervenant sur plusieurs territoires. 
            L'agent peut modifier ses informations depuis son profil utilisateur.
        </p>
    </div>
{% else %}
    <span class="fr-mb-3v">Tous les champs sont obligatoires</span>
{% endif %}
{{ form_start(formUserPartner, {'attr': {'id': 'fr-modal-user-edit-form'}}) }}
{{ form_errors(formUserPartner) }}
<div class="fr-grid-row fr-grid-row--gutters">
    <div class="fr-col-12">
        {{ form_row(formUserPartner.email) }}
    </div>
    <div class="fr-col-12">
        {{ form_row(formUserPartner.nom) }}
    </div>
    <div class="fr-col-12">
        {{ form_row(formUserPartner.prenom) }}
    </div>
    <div class="fr-col-12">
        {{ form_row(formUserPartner.fonction) }}
    </div>
    <div class="fr-col-12">
        {{ form_row(formUserPartner.role) }}
    </div>
    <div class="fr-col-12">
        {{ form_row(formUserPartner.isMailingActive) }}
    </div>
    {% if formUserPartner.hasPermissionAffectation is defined %}
        <div class="fr-col-12">
            <label class="fr-label fr-pb-1w">Droits d'affectation</label>
            <div id="user_partner_permission_affectation_toggle">
                {{ form_row(formUserPartner.hasPermissionAffectation) }}
            </div>
            <div id="user_partner_permission_affectation_text" class="fr-alert fr-alert--info fr-alert--sm fr-mt-2v" class="fr-hidden">
                <p>Les responsables de territoire ont le droit d'affecter des partenaires aux signalements du territoire. Ce droit ne peut pas leur être retiré.</p>
            </div>
        </div>
    {% endif %}
    {{ form_end(formUserPartner) }}
</div>