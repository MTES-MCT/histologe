<dialog aria-labelledby="refus-affectation-modal-title" id="refus-affectation-modal" class="fr-modal">
    <div class="fr-container fr-container--fluid fr-container-md">
        <div class="fr-grid-row fr-grid-row--center">
            <div class="fr-col-12 fr-col-md-8 fr-col-lg-6">
                <div class="fr-modal__body">
                    <div class="fr-modal__header">
                        <button type="button" class="fr-btn--close fr-btn" aria-controls="refus-affectation-modal">Fermer</button>
                    </div>
                    <div class="fr-modal__content fr-text--left">
                        <h1 id="refus-affectation-modal-title" class="fr-modal__title">
                            Refus signalement #{{ signalement.reference }}
                        </h1>

                        {% form_theme refusAffectationForm 'form/dsfr_theme.html.twig' %}
                        {{ form_start(refusAffectationForm, {'attr': {'id': 'signalement-affectation-response-deny-form', 'data-submit-type':'formData'}}) }}
                        {{ form_errors(refusAffectationForm) }}
                        {{ form_row(refusAffectationForm.motifRefus) }}
                        {{ form_row(refusAffectationForm.description) }}
                        {{ form_row(refusAffectationForm.files) }}
                        {{ form_end(refusAffectationForm) }}

                    </div>
                    <div class="fr-modal__footer">
                        <ul class="fr-btns-group fr-btns-group--right fr-btns-group--inline-reverse fr-btns-group--inline-lg fr-btns-group--icon-left">
                            <li>
                                <button class="fr-btn fr-icon-check-line" form="signalement-affectation-response-deny-form" type="submit">
                                    Refuser l'affectation
                                </button>
                            </li>
                            <li>
                                <button type="button" class="fr-btn fr-btn--secondary fr-icon-close-line" aria-controls="refus-signalement-modal">
                                    Annuler
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</dialog>