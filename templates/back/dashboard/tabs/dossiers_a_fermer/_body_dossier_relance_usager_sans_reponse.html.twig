{% set columns = [
    { class: 'fr-col-md-3', title: 'Nbr. relances' },
    { class: 'fr-col-md-3', title: 'Référence' },
    { class: 'fr-col-md-2', title: 'Première relance le' },
    { class: 'fr-col-md-3', title: 'Dernier suivi partagé à l\'usager' },
] %}
<section class="fr-mb-5v">
    <header class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-12 fr-col-md-9">
            <h3 class="fr-text-label--blue-france tab-panel-title-with-information-icon">Dossiers avec au moins 3 relances usager restées sans réponse ({{ count }})</h3>
        </div>
        <div class="fr-select-group fr-col-12 fr-col-md-3">
            <label class="fr-label" for="order-type-dossiers-relance-usager-sans-reponse">
                Trier par
            </label>
            <select id="order-type-dossiers-relance-usager-sans-reponse" class="fr-select" data-sort-body="dossiers-relance-usager-sans-reponse">
                <option value="nbRelanceFeedbackUsager-DESC" selected="selected">Nombre de relances décroissant (du plus grand au plus petit) = tri par défaut</option>
                <option value="nbRelanceFeedbackUsager-ASC">Nombre de relances croissant (du plus petite au plus grand)</option>
            </select>
        </div>
    </header>
    <hr class="hr--blue-france">
    <section class="fr-container--fluid">
        {% for item in items %}
            {% set declarantInfo = item.reference ~ ' - ' ~ item.nomDeclarant|upper ~ ' ' ~ item.prenomDeclarant|capitalize %}
            {% include 'back/dashboard/components/_card.html.twig' with {
                data: [
                    '<div><span class="fr-badge fr-badge--no-icon ' ~ (item.nbRelanceDossier | badge_relance_class) ~ '">' ~ item.nbRelanceDossier  ~ '</span></div>',
                    '<div class="fr-text-label--blue-france">
                        <div><strong class="fr-text--lg">' ~ declarantInfo ~ '</strong></div>
                        <div>' ~ item.adresse ~ '</div>
                    </div>',
                    '<div>
                        <span>' ~ item.premiereRelanceDossierAt|date('d/m/Y') ~ '</span>
                    </div>',
                    '<div>
                        <strong>' ~ item.dernierSuiviPublicAt|date('d/m/Y') ~ '</strong><br>
                        <span>Suivi ' ~ (item.dernierTypeSuivi == 3 ? 'partenaire' : 'automatique') ~ '</span>
                    </div>'
                ],
                link: path('back_signalement_view', {'uuid' : item.uuid})
            } %}

        {% else %}
            <p>Aucun dossier trouvé.</p>
        {% endfor %}
        {% include 'back/dashboard/components/_footer_link.html.twig' %}
    </section>
</section>
