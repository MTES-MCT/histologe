{% extends 'back/base_bo.html.twig' %}

{% block title %}Zones du territoire{% endblock %}

{% block content %}
    <section class="fr-p-5v">
        {% include 'back/breadcrumb_bo.html.twig' with {
            'level2Title': 'Outils admin',
            'level2Link': '',
            'level2Label': '',
            'level3Title': 'Zones',
            'level3Link': path('back_zone_index'),
            'level4Title': 'Zone '~ zone.name,
            'level4Link': '',
        } %}
        <header>
            <div class="fr-grid-row">
                <div class="fr-col-8 fr-text--left">
                    <h1>Zone {{zone.name}}</h1>
                </div>
                <div class="fr-col-4 fr-text--right">
                    <a class="fr-btn fr-btn--icon-left fr-btn--md fr-fi-edit-line" href="#">Modifier la zone</a>
                </div>
            </div>
            <div class="fr-grid-row">
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="fr-col-12">
                        <b>Territoire :</b>
                        {{ zone.territory.zip }} - {{ zone.territory.name }}
                    </div>
                {% endif %}
                <div class="fr-col-12">
                    <b>Partenaires :</b>
                    {% for partner in zone.partners %}
                        <span class="fr-badge fr-badge--blue-ecume fr-badge--no-icon">{{ partner.name }}</span>
                    {% endfor %}
                </div>
            </div>
        </header>
    </section>

    <section class="fr-grid-row fr-grid-row--middle fr-p-5v">
        <div class="fr-col-8">
            <div id="zone_map" style="height: 70vh;"></div>
        </div>
        <div class="fr-col-4" id="infos" data-zone="{{zone.area}}">

        </div>
    </section>

{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.css">
{% endblock %}

{% block javascripts %}
	<script src="https://cdn.jsdelivr.net/npm/leaflet@1.9.4/dist/leaflet.js"></script> 
    <script src="{{ asset('js/leaflet-omnivore.min.js') }}" ></script>
    <script src="{{ asset('js/zone_map.js') }}" ></script>
{% endblock %}