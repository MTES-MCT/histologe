{% extends 'back/base_bo.html.twig' %}

{% block title %}Modifier la zone {{zone.name}}{% endblock %}

{% block content %}
    <section class="fr-p-5v">
        {% include 'back/breadcrumb_bo.html.twig' with {
            'level2Title': 'Outils admin',
            'level2Link': '',
            'level2Label': '',
            'level3Title': 'Mon territoire',
            'level3Link': path('back_territory_management_index'),
            'level4Title': 'Zones',
            'level4Link': path('back_territory_management_zone_index'),
            'level5Title': 'Zone '~ zone.name,
            'level5Link': path('back_territory_management_zone_show', {zone: zone.id}),
            'level5Label': 'Retour Ã  la zone',
            'level6Title': 'Modifier la zone ' ~ zone.name,
        } %}
        <header>
            <div class="fr-grid-row">
                <div class="fr-col-12 fr-text--left">
                    <h1 class="fr-mb-0">Zone {{zone.name}}</h1>
                </div>
            </div>
        </header>
    </section>

    <section class="fr-px-5v fr-pb-5v fr-grid-row">
        <div class="fr-col-12">
            {{ form_start(form, {'attr': {'id': 'form-add-zone'}}) }}
            {{ form_errors(form) }}
            <div class="fr-grid-row fr-grid-row--gutters">
                <div class="fr-col-12">
                    {{ form_row(form.name) }}
                </div>
                <div class="fr-col-12">
                    {{ form_row(form.partners) }}
                </div>
                <div class="fr-col-12">
                    {{ form_row(form.excludedPartners) }}
                </div>
                <div class="fr-col-12">
                    {{ form_row(form.type) }}
                </div>
                <div class="fr-col-12">
                    {{ form_row(form.file) }}
                </div>
                <div class="fr-col-12">
                    {{ form_row(form.area) }}
                </div>
                <div class="fr-col-6">
                    <a href="{{path('back_territory_management_zone_index')}}" class="fr-btn fr-btn--secondary fr-btn--icon-left fr-icon-close-line" type="button">Annuler</a>
                </div>
                <div class="fr-col-6">
                    {{ form_row(form.save) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </section>

{% endblock %}
