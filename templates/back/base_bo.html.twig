{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <main class="fr-container-fluid">
        <div class="fr-grid-row">
            {% include 'back/nav_bo.html.twig' %}
            <div class="fr-col-12 fr-col-md-9 fr-col-lg-10" style="overflow-x:hidden ">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div role="alert" class="fr-alert fr-alert--{{ label }} fr-alert--sm">
                        {% if label is same as('error error-raw')  %}
                            <p>{{ message|raw }}</p>
                        {% else %}
                            <p>{{ message }}</p>
                        {% endif %}
                        </div>
                    {% endfor %}
                {% endfor %}
                {% block content %}{% endblock %}
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block chatbot %}
    {% if chatbot.enable %}
        <script type='module' src='https://interfaces.zapier.com/assets/web-components/zapier-interfaces/zapier-interfaces.esm.js'></script>
        <zapier-interfaces-chatbot-embed is-popup='true' chatbot-id='clr7ulxxq07sea5d5ioyg3ruh' height='600px' width='400px'></zapier-interfaces-chatbot-embed>
    {% endif %}
{% endblock %}