{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <main class="fr-container-fluid">
        <div class="fr-grid-row">
            {% include 'back/nav_bo.html.twig' %}
            <div class="fr-col-12 fr-col-md-9 fr-col-lg-10" style="overflow-x:hidden ">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div role="alert" class="fr-alert fr-alert--{{ label }} fr-alert--sm">
                        {% if label is same as('error error-raw')  %}
                            <p>{{ message|raw }}</p>
                        {% else %}
                            <p>{{ message }}</p>
                        {% endif %}
                        </div>
                    {% endfor %}
                {% endfor %}
                {% block content %}{% endblock %}
            </div>
        </div>
    </main>
{% endblock %}

{% block chatbot %}
    {% if chatbot.enable %}
        <div class="faq-redirection">
            <a href="https://documentation.histologe.beta.gouv.fr/?q="
               class="fr-btn fr-icon-questionnaire-line"
               target="blank"
               title="Vous avez une question ?"
               rel="noopener"></a>
        </div>
    {% endif %}
{% endblock %}
{% block javascripts %}
{% endblock %}
