{% extends 'back/base_bo.html.twig' %}

{% block title %}Liste des utilisateurs API{% endblock %}

{% block content %}
    <div data-ajax-form>
        {% include 'back/user_api_permission/_modal_user_api_permission_delete.html.twig' %}
    </div>
    <section class="fr-p-4v">
        {% include 'back/breadcrumb_bo.html.twig' with {
            'level2Title': 'Outils SA',
            'level2Link': '',
            'level2Label': '',
            'level3Title': 'Liste des utilisateurs API',
            'level3Link': '',
        } %}

        <header>
            <div class="fr-grid-row fr-grid-row--gutters">
                <div class="fr-col-12 fr-col-md-8 fr-text--left">
                    <h1>Liste des utilisateurs API</h1>
                    <p>
                        La liste des utilisateurs API ayant un compte sur {{ platform.name }}.
                    </p>
                </div>
                <div class="fr-col-12 fr-col-md-4 fr-text--md-right">
                    <a href="{{ path('back_api_user_add') }}" class="fr-btn fr-btn--icon-left fr-icon-add-line fr-btn--block fr-btn--md-inline" title="Ajouter un utilisateur API">Ajouter un utilisateur API</a>
                </div>
            </div>
        </header>
    </section>
    {{ form_start(form) }}

    <section class="fr-container--fluid overflow-visible">
        {{ form_errors(form) }}
        <div class="fr-grid-row fr-grid-row--bottom fr-grid-row--gutters">
            <div class="fr-col-12 fr-col-lg-3">
                {{ form_row(form.queryUser) }}
            </div>
            <div class="fr-col-12 fr-col-lg-3">
                {{ form_row(form.statut) }}
            </div>
            <div class="fr-col-12 fr-col-lg-3">
                <a href="{{ path('back_api_user_index') }}" class="fr-link fr-link--icon-left fr-icon-close-circle-line">Réinitialiser les résultats</a>
            </div>
        </div>
    </section>

    <section class="fr-col-12 fr-grid-row fr-grid-row--middle fr-py-4v">
        <div class="fr-col-12 fr-col-md-6" id="title-list-results">
            {% include 'back/user_api_permission/_title-list-results.html.twig' %}
        </div>
    </section>
    {{ form_end(form) }}

    <section class="fr-col-12 fr-pt-0 fr-px-4v" id="table-list-results">
        {% include 'back/user_api_permission/_table-list-results.html.twig' %}
    </section>
{% endblock %}
