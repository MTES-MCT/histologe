<section class="fr-container--fluid overflow-visible">
    {% form_theme form 'form/dsfr_theme.html.twig' %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="fr-grid-row fr-grid-row--gutters">
        {% for key in bo_filters.formKeys %}
            <div class="fr-col-12 fr-col-lg-3">
                {{ form_row(form[key]) }}
            </div>
        {% endfor %}
        <div class="fr-col-12 fr-col-lg-3">
            <a href="{{ path(bo_filters.reinitSlug) }}" class="fr-link fr-link--icon-left fr-icon-close-circle-line">Réinitialiser les résultats</a>
        </div>
    </div>
    {{ form_end(form) }}
</section>