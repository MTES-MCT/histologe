{% extends 'back/base_bo.html.twig' %}

{% block title %} Administration - Nouveaut√©(s) {% endblock %}

{% block content %}
    <section class="fr-p-4v">
        {% include 'back/breadcrumb_bo.html.twig' with {
            'level2Title': 'Notifications',
            'level2Link': '',
            'level2Label': '',
        } %}
    </section>
    {% set searchParams = app.request.query.all|url_encode %}

    <section class="fr-grid-row fr-grid-row--middle fr-p-4v ">
        <div class="fr-col-12 fr-col-md-6">
            <h1 class="fr-h2 fr-mb-0">Notification(s)</h1>
        </div>
        <div class="fr-col-6 fr-text--right">
            <div id="notification-selected-buttons">
                {% include 'back/notifications/_mass-action-btns.html.twig' %}
            </div>
        </div>
    </section>

    <section class="fr-col-12 fr-px-4v" id="title-list-results">
        {% include 'back/notifications/_title-list-results.html.twig' %}
    </section>
    
    {{ form_start(form) }}
    <section class="fr-col-12 fr-col-lg-3 fr-pt-0">
        {{ form_row(form.orderType) }}
    </section>
    {{ form_end(form) }}

    <section class="fr-col-12 fr-pt-0 fr-px-4v" id="table-list-results">
        {% include 'back/notifications/_table-list-results.html.twig' %}
    </section>
{% endblock %}
