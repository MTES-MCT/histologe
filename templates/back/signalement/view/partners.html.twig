{% if is_granted('SIGN_AFFECTATION_SEE', signalement) %}
    <div class="fr-grid-row">
        <div class="fr-col-9 fr-col-md-6">
            <h3 class="fr-h5">Partenaires affectés</h3>
        </div>
        <div class="fr-col-3 fr-col-md-6">
            <div class="fr-text--right fr-btns-group fr-btns-group--sm fr-btns-group--inline fr-btns-group--right fr-btns-group--icon-left">
                <button 
                    class="fr-btn fr-btn--secondary fr-btn--icon-left"
                    data-fr-opened="false"
                    aria-controls="fr-modal-historique-affectation"
                >
                    Voir l'historique des affectations
                </button>
                 {% if is_granted('SIGN_AFFECTATION_TOGGLE', signalement) %}
                    <button class="fr-btn fr-fi-add-line fr-btn--icon-left" data-fr-opened="false" aria-controls="fr-modal-affectation">
                        Affecter des partenaires
                    </button>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="fr-container--fluid">
        {% if signalement.affectations|length %}
            <div class="fr-grid-row fr-grid-row--gutters">
                {% for partnerAffectation in signalement.affectations %}
                    {% include 'back/signalement/view/affectation/_item-with-action.html.twig' %}
                {% endfor %}
            </div>
        {% endif %}
        {% if subscriptionsInMyPartner|length %}
            <div class="fr-grid-row fr-grid-row--gutters">
                <div class="fr-col-12">
                    {% include 'back/signalement/view/affectation/_subscriptions-list.html.twig' with {'title': 'Agents du partenaire abonnés au dossier'} %}
                </div>
            </div>
        {% endif %}
    </div>
{% elseif 
    signalement.statut is not same as enum('App\\Entity\\Enum\\SignalementStatus').CLOSED 
    and (affectation and affectation.statut is same as enum('App\\Entity\\Enum\\AffectationStatus').ACCEPTED) 
%}
    <div class="fr-container--fluid">
        <div class="fr-grid-row fr-grid-row--gutters">
            <div class="fr-col-12 fr-col-md-6">
                <h3 class="fr-h5">Tous les partenaires impliqués</h3>
                {% for partnerAffectation in signalement.affectations %}
                    {% include 'back/signalement/view/affectation/_item.html.twig' %}
                {% endfor %}
            </div>
            <div class="fr-col-12 fr-col-md-6">
                {% include 'back/signalement/view/affectation/_subscriptions-list.html.twig' with {'title': 'Agents abonnés au dossier (mon partenaire)'} %}
            </div>
        </div>
    </div>
{% endif %}
