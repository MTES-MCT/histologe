{% if affectation and affectation.isSynchronizeWithEsabora %}
    {% set partnerLabel = affectation.partner.type and affectation.partner.type.value =='ARS'
        ? constant('App\\Service\\Interconnection\\Esabora\\EsaboraSISHService::NAME_SI')
        : 'Esabora'
    %}
    {% if affectation.statut is same as enum('App\\Entity\\Enum\\AffectationStatus').WAIT %}
        <div class="fr-notice fr-notice--warning fr-my-4v fr-text--left">
            <div class="fr-container">
                <div class="fr-notice__body">
                    <p>
                        <span class="fr-notice__title">Pour traiter ce signalement, veuillez d’abord accepter ou refuser le dossier dans {{ partnerLabel }}.</span>
                    </p>
                </div>
            </div>
        </div>
    {% elseif affectation.statut is same as enum('App\\Entity\\Enum\\AffectationStatus').ACCEPTED %}
        <div class="fr-notice fr-notice--warning fr-my-4v fr-text--left">
            <div class="fr-container">
                <div class="fr-notice__body">
                    <p>
                        <span class="fr-notice__title">La clôture de ce signalement est à réaliser sur {{ partnerLabel }}.</span>
                    </p>
                </div>
            </div>
        </div>
    {% endif %}
{% endif %}
