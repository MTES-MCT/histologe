{% extends 'back/base_bo.html.twig' %}

{% block title %}Administration - Tous mes signalements{% endblock %}

{% block content %}
    <section class="fr-pt-5v fr-pl-5v">
        {% include 'back/breadcrumb_bo.html.twig' with {
            'level2Title': 'Liste des signalements',
            'level2Link': '',
            'level2Label': '',
        } %}
    </section>
    <div id="app-signalement-list"
         data-ajaxurl="{{ path('back_signalement_list_json') }}"
         data-ajaxurl-export-csv="{% if platform.feature_export_custom %}{{ path('back_signalement_list_export') }}{% else %}{{ path('back_signalement_list_export_old_csv') }}{% endif %}"
         data-ajaxurl-settings="{{ path('back_widget_settings') }}"
         data-ajaxurl-contact="{{ path('front_contact') }}"
         data-ajaxurl-remove-signalement="{{ path('back_signalement_delete', {'uuid' : '<uuid>'}) }}"
    >

    </div>
{% endblock %}
