{% if criteres %}
    {% set firstCritere = criteres|first %}
    {% if firstCritere is defined %}
        {% set firstPrecision = firstCritere|first %}
        {% if firstPrecision is defined %}
            {% if signalement.jsonContent[firstPrecision.desordreCritere.slugCategorie] is defined %}
                <h5>{{ signalement.jsonContent[firstPrecision.desordreCritere.slugCategorie] }}</h5>
            {% endif %}
        {% endif %}
    {% endif %}
    
    <ul>
        {% for critere,precisions in criteres %}
            <li>
                {{ critere }}     
                {% for precision in precisions %}
                    {% if precision.label is not same as '' or signalement.jsonContent[precision.desordreCritere.slugCritere] is defined %}
                        <ul class="fr-list fr-list--none">
                            <li>
                                {% if precision.label is not same as '' %}
                                    {{ precision.label|raw }}<br>
                                {% endif %}    
                                {% if signalement.jsonContent[precision.desordreCritere.slugCritere] is defined %}
                                    Commentaire usager : <i>{{ signalement.jsonContent[precision.desordreCritere.slugCritere] }}</i>
                                {# Affichage des données spécifiques liées aux précisions sur la taille des pièces (à standardiser si nécessaire) #}
                                {% elseif signalement.jsonContent[precision.desordrePrecisionSlug] is defined %}
                                    Taille (en cm) : <i>{{ signalement.jsonContent[precision.desordrePrecisionSlug] }}</i>
                                {% endif %}
                            </li>
                        </ul>
                    {% endif %}
                {% endfor %}
            </li>
        {% endfor %}
    </ul>
{% endif %}