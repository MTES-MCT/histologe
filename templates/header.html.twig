{% if feature_sites_faciles %}
    <header class="fr-header">
        <div class="fr-header__body">
            <div class="fr-container">
                <div class="fr-header__body-row">
                    <div class="fr-header__brand fr-enlarge-link">
                        <div class="fr-header__brand-top">
                            <div class="fr-header__logo">
                                <a href="{{sites_faciles_url}}" title="Accueil — Ministère de l'Aménagement du territoire et de la Décentralisation">
                                    <p class="fr-logo">Ministères<br>aménagement<br>du territoire<br>transition<br>écologique</p>
                                </a>
                            </div>
                            <div class="fr-header__operator">
                                <img class="fr-responsive-img" src="{{ asset('img/logo-signal-logement-small.original.svg') }}" alt="Logo signal logement" style="max-width:3,0rem;" data-fr-js-ratio="true">
                            </div>
                            <div class="fr-header__navbar">
                                <button class="fr-btn--menu fr-btn" data-fr-opened="false" aria-controls="fr-menu-mobile" id="fr-btn-menu-mobile" title="Menu" data-fr-js-modal-button="true">Menu</button>
                            </div>
                        </div>
                        <div class="fr-header__service">
                            <a href="{{sites_faciles_url}}" title="Accueil — Lutter contre le mal logement">
                                <p class="fr-header__service-title">
                                    Lutter contre le mal logement
                                </p>
                            </a>
                            <p class="fr-header__service-tagline">
                            </p>
                        </div>
                    </div>
                    <div class="fr-header__tools">
                        <div class="fr-header__tools-links" data-fr-js-header-links="true">
                            <ul class="fr-btns-group">
                                <li>
                                    {% if app.user %}
                                        <a class="fr-btn" target="_self" href="{{ path('back_dashboard') }}">
                                            Tableau de bord
                                        </a>
                                    {% else %}
                                        <a class="fr-btn" target="_self" href="{{ path('app_login') }}">
                                            Espace pro
                                        </a>
                                    {% endif %}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="fr-header__menu fr-modal" id="fr-menu-mobile" data-fr-js-modal="true" data-fr-js-header-modal="true">
            <div class="fr-container">
                <button type="button" class="fr-btn--close fr-btn" aria-controls="fr-menu-mobile" data-fr-js-modal-button="true">Fermer</button>
                <div class="fr-header__menu-links">
                    <ul class="fr-btns-group">
                        <li>
                            {% if app.user %}
                                <a class="fr-btn" target="_self" href="{{ path('back_dashboard') }}">
                                    Tableau de bord
                                </a>
                            {% else %}
                                <a class="fr-btn" target="_self" href="{{ path('app_login') }}">
                                    Espace pro
                                </a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
{% else %}
    <header class="fr-header">
        <div class="fr-header__body">
            <div class="fr-container">
                <div class="fr-header__body-row">
                    <div class="fr-header__brand fr-enlarge-link">
                        <div class="fr-header__brand-top">
                            <div class="fr-header__logo">
                                <p class="fr-logo">
                                    ministère <br> de la transition <br>écologique
                                </p>
                            </div>
                            <div class="fr-header__navbar">
                                <button class="fr-btn--menu fr-btn" data-fr-opened="false" aria-controls="modal-header-menu" aria-haspopup="menu" id="button-header-menu" title="Menu">
                                    Menu
                                </button>
                            </div>
                        </div>
                        <div class="fr-header__service">
                            <a href="{{ path('home') }}" title="Accueil - {{ platform.name }} - Ministère de la transition écologique">
                                <img class="fr-responsive-img logo-width" src="{{ asset('img/' ~ platform.logo145) }}" alt="{{ platform.name }}">
                            </a>
                        </div>
                    </div>
                    <div class="fr-header__tools">
                        <div class="fr-header__tools-links">
                            <ul class="fr-btns-group">
                                <li>
                                    {% if app.user %}
                                    <a class="fr-btn fr-icon-account-line" href="{{ path('back_dashboard') }}">
                                        Tableau de bord
                                    </a>
                                    {% else %}
                                    <a class="fr-btn fr-icon-lock-line" href="{{ path('app_login') }}">
                                        Espace pro
                                    </a>
                                    {% endif %}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="fr-header__menu fr-modal" id="modal-header-menu" aria-labelledby="button-header-menu">
            <div class="fr-container">
                <button class="fr-btn--close fr-btn" aria-controls="modal-header-menu" title="Fermer">
                    Fermer
                </button>
                <div class="fr-header__menu-links">
                </div>
                <nav class="fr-nav" id="navigation-main" aria-label="Menu principal">
                    <ul class="fr-nav__list">
                        <li class="fr-nav__item">
                            <a class="fr-nav__link" href="{{ path('home') }}" target="_self"
                                {% if app.request.get('_route') == 'home' %}aria-current="page"{% endif %}
                                >Accueil</a>
                        </li>
                        <li class="fr-nav__item">
                            <a class="fr-nav__link" href="{{ path('front_signalement') }}" target="_self"
                                {% if app.request.get('_route') == 'front_signalement' %}aria-current="page"{% endif %}
                                >Signalement</a>
                        </li>
                        <li class="fr-nav__item">
                            <button class="fr-nav__btn" aria-expanded="false" aria-controls="submenu-about"
                                {% if app.request.get('_route') in ['front_about', 'front_obligations_entretien', 'front_aides_travaux', 'front_statistiques'] %}aria-current="true"{% endif %}
                                >Infos utiles</button>
                            <div class="fr-collapse fr-menu" id="submenu-about">
                                <ul class="fr-menu__list">
                                    <li>
                                        <a class="fr-nav__link" href="{{ path('front_about') }}" target="_self"
                                            {% if app.request.get('_route') == 'front_about' %}aria-current="page"{% endif %}
                                            >Qui sommes-nous ?</a>
                                    </li>
                                    <li>
                                        <a class="fr-nav__link" href="{{ path('front_obligations_entretien') }}" target="_self"
                                            {% if app.request.get('_route') == 'front_obligations_entretien' %}aria-current="page"{% endif %}
                                            >Entretien du logement : les obligations</a>
                                    </li>
                                    <li>
                                        <a class="fr-nav__link" href="{{ path('front_aides_travaux') }}" target="_self"
                                            {% if app.request.get('_route') == 'front_aides_travaux' %}aria-current="page"{% endif %}
                                            >Les aides aux travaux</a>
                                    </li>
                                    <li>
                                        <a class="fr-nav__link" href="{{ path('front_statistiques') }}" target="_self"
                                            {% if app.request.get('_route') == 'front_statistiques' %}aria-current="page"{% endif %}
                                            >Statistiques d'usage</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="fr-nav__item">
                            <button class="fr-nav__btn" aria-expanded="false" aria-controls="submenu-help"
                                {% if app.request.get('_route') == 'front_contact' %}aria-current="true"{% endif %}
                                >Aide</button>
                            <div class="fr-collapse fr-menu" id="submenu-help">
                                <ul class="fr-menu__list">
                                    {% if gitbook is defined %}
                                    <li>
                                        <a class="fr-nav__link" href="{{ gitbook.faq }}" target="_blank" rel="noopener"
                                            >Documentation</a>
                                    </li>
                                    {% endif %}
                                    <li>
                                        <a class="fr-nav__link" href="{{ path('front_contact') }}" target="_self"
                                            {% if app.request.get('_route') == 'front_contact' %}aria-current="page"{% endif %}
                                            >Contact</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
{% endif %}
